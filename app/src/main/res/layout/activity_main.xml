<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:orientation="horizontal"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipChildren="false">

        <hcay.pui.com.umlapp.DrawingView
            android:id="@+id/drawing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:background="#FFFFFFFF" />

    </LinearLayout>
    
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="40dp"
        android:scaleType="fitCenter"
        android:background="@drawable/gesture_button_selector"
        android:onClick="onClick"
        android:id="@+id/gestureModeButton"
        android:contentDescription="gestureMode" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="108dp"
        android:scaleType="fitCenter"
        android:background="@drawable/selection_button_selector"
        android:onClick="onClick"
        android:id="@+id/selectionModeButton"
        android:contentDescription="selectionMode" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="40dp"
        android:scaleType="fitCenter"
        android:background="@drawable/clear_button_selector"
        android:id="@+id/clear_button"
        android:contentDescription="clearDiagram" />

</FrameLayout>